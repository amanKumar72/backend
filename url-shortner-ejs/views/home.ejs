<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
  </head>
  <body>
    <div class="backend-response-handle"></div>
    <div class="inpu-area">
      <form action="/url" method="POST">
        <h1>Enter the url</h1>
        <input type="text" name="url" placeholder="Enter the url" />
        <button type="submit">get short url</button>
      </form>
    </div>
    <div class="all-urls-summary">
      <ul>
        <% Urls && Urls.forEach((element) => { %>
        <li>
          <h3>Original url : <%= element.originalUrl %></h3>
          <h3>
            Short url :
            <a href="http://localhost:8001/<%= element.shortId %>">
              http://localhost:8001/<%= element.shortId %>
            </a>
          </h3>
          <h3>total clicks : <%= element.visitHistory.length %></h3>
        </li>
        <% }); %>
      </ul>
    </div>
  </body>
</html>
